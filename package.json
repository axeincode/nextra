      "autoprefixer": "^10.4.7",
      "cssnano": "^5.1.12",
      "tailwindcss": "^3.1.6",
      "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
      "@tailwindcss/typography": "^0.5.4",
      "tsup": "^6.2.0",
      "concurrently": "^7.3.0",
      "cross-env": "^7.0.3"
